if [[ $kexte == *APFS* ]]; then
  if [ ! -d /Volumes/EFI ]; then
  diskutil mount $efiroot
  fi
  if [ -f /Volumes/EFI/EFI/CLOVER/drivers64UEFI/apfs.efi ]; then
  apfslocal=`cat /Volumes/EFI/EFI/CLOVER/drivers64UEFI/apfs.efi |xxd | grep -A 2 APFS | head -n 2 | tail -n 1 | cut -c 52-61 | sed "s/\///g"`
  curl -sS -o $ScriptTmpPath/apfs.htm https://kextupdater.slsoft.de/apfs/version.htm
  apfsremote=`cat $ScriptTmpPath/apfs.htm`
    if [ ! $apfslocal = $apfsremote ]; then
    echo $apfstext1
    mkdir -p $ScriptDownloadPath $ScriptDownloadPath/apfs
    curl -sS -o $ScriptDownloadPath/apfs/apfs.efi https://kextupdater.slsoft.de/apfs/apfs.efi
    else
    echo $apfstext0  
    fi
  else
  mkdir -p $ScriptDownloadPath $ScriptDownloadPath/apfs
  curl -sS -o $ScriptDownloadPath/apfs/apfs.efi https://kextupdater.slsoft.de/apfs/apfs.efi  
  echo $apfsinit
  fi
bash script && exit
exit 0
fi
